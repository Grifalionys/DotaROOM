<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191465"
    tools:ignore="MissingDefaultResource">


        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:foreground="@drawable/gradient2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iconAbility"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/view"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/nameAbilities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="Apparat"
            android:textSize="18sp"
            android:textStyle="bold"
            android:theme="@style/TextViewStyle"
            app:layout_constraintStart_toEndOf="@+id/iconAbility"
            app:layout_constraintTop_toTopOf="@+id/iconAbility" />

        <TextView
            android:id="@+id/tvFullDescriptionAbility"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:text="Описание"
            android:textSize="16sp"
            android:theme="@style/TextViewStyle"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toBottomOf="@+id/iconAbility" />

        <ImageView
            android:id="@+id/imageMana"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/mana"
            app:layout_constraintStart_toStartOf="@+id/nameAbilities"
            app:layout_constraintTop_toBottomOf="@+id/nameAbilities" />

        <TextView
            android:id="@+id/textMana"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="100"
            android:textSize="20sp"
            android:theme="@style/TextViewStyle"
            app:layout_constraintStart_toEndOf="@+id/imageMana"
            app:layout_constraintTop_toTopOf="@+id/imageMana" />

        <TextView
            android:id="@+id/textCoolDown"
            android:layout_width="13dp"
            android:layout_height="28dp"
            android:layout_marginStart="8dp"
            android:text="5"
            android:textSize="20sp"
            android:theme="@style/TextViewStyle"
            app:layout_constraintStart_toEndOf="@+id/imageCoolDown"
            app:layout_constraintTop_toTopOf="@+id/imageCoolDown" />

        <ImageView
            android:id="@+id/imageCoolDown"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cooldown"
            app:layout_constraintStart_toStartOf="@+id/imageMana"
            app:layout_constraintTop_toBottomOf="@+id/imageMana" />


</androidx.constraintlayout.widget.ConstraintLayout>